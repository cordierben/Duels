<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list">

    <TextView
        android:id="@+id/titreMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/maven_pro"
        android:text="Duels"
        android:textColor="#FFFFFF"
        android:textSize="65dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/customduels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreMenu">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="191dp"
            android:layout_height="219dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/vinyleviolet" />

        <ImageView
            android:id="@+id/playfragment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/playmenu"
            android:textColor="@android:color/white"
            android:textSize="50dp" />

    </FrameLayout>

    <TextView
        android:id="@+id/customduels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_corner"
        android:elevation="20dp"
        android:fontFamily="@font/maven_pro"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp"
        android:shadowColor="#B550F1"
        android:text="Customs Modes"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        tools:layout_editor_absoluteX="60dp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/settingswhite"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/titreMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <LinearLayout
        android:id="@+id/prop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customduels"
        app:layout_constraintVertical_bias="0.263"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageArtistMenu"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/textArtistMenu"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/maven_pro"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:text="Loading..."/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>